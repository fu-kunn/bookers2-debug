<table class="table table-hover table-inverse">
  <% if @range == "User" %>
  <h3>Users search for "<%= @word %>"</h3>
    <tbody>
        <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
        </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <h3>Books search for "<%= @word %>"</h3>
    <tbody>
        <tr>
         <th colspan="1"></th>
         <th>Title</th>
         <th>Opnion</th>
        </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>